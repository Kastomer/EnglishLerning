section.header
    if type
        - classType ="header__wrap_light"
    else
       - classType ="header__wrap_darck"

    .header__wrap(class = classType)
        .header__logo 
            if type 
                img(src="/images/logo.png")
            else 
                img(src="/images/logo_darck.png")
        ul.header__nav
            li.header__nav-item Тесты
            li.header__nav-item Преподаватели
            li.header__nav-item.btn-entry(data-url=urlforscripts) Личный кабинет

    .popup.popup-autorez
        .popup-fade 
            .popup-autorez__content.popup__content
                .popup-autorez__header.mt-4
                    p Регистрация
                .popup-close
                    p  ❌
                form.popup-autorez__fields.popup-autorez__fields_active
                    input(type="text" placeholder="ФИО" name="FIO").popup-autorez__input
                    input(type="text" placeholder="Телефон" name="phone").popup-autorez__input
                    input(type="text" placeholder="Email" name="mail").popup-autorez__input
                    input(type="password" placeholder="Пароль" name="pas").popup-autorez__input
                    input(type="password" placeholder="Повтор пароля" name="pas_two").popup-autorez__input

                form.popup-autorez__fields_authorization
                    input(type="text" placeholder="Email" name="mail").popup-autorez__input_authorization
                    input(type="password" placeholder="Пароль" name="pas").popup-autorez__input_authorization

                .popup-autorez__btn
                    .popup-autorez__btn_autorez.btn.btn_strong
                        p Войти ➔
                    .popup-autorez__btn_regis.btn.btn_strong
                        p Зарегистрироваться  ➔